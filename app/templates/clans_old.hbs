!--{{outlet}}
<h1>Clans</h1>
{{#each model as |clan|}}
	<div class="well">
		<h4>{{#link-to 'clans.edit' clan.id}}{{clan.tag}}{{/link-to}}</h4>
		<h4>{{clan.tag}}</h4>
		<small>Date Added: {{moment-format clan.date 'YYYY-MM-DD'}}</small>
		<p>Who added: {{clan.adderName}}</p>
		<button {{action 'deleteClan' clan.id}} class="btn btn-danger">Delete</button>
	</div>
{{/each}}

<table class="table table-striped table-hover table-condensed">
  <thead>
    <tr>
      <th>Clan tag</th>
      <th>Date added</th>
      <th>Who added</th>
      <th>Record created</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
  {{#each model as |clan|}}
    <tr>
      <th>{{clan.tag}}</th>
      <td>{{moment-format clan.date 'YYYY-MM-DD'}}</td>
      <td>{{clan.adderName}}</td>
      <td>{{moment-format clan.created 'YYYY-MM-DD'}}</td>
      <td><button {{action 'deleteClan' clan.id}} class="btn btn-primary">Delete</button></td>
    </tr>
  {{/each}}
  </tbody>
</table>

<!--//old index-->
{{#each model as |clan|}}
  <div class="panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title">{{clan.tag}}</h3>
    </div>
    <div class="panel-body">
      <p>Name Added: {{clan.adderName}}</p>
      <p>Date Joined: {{moment-format clan.date 'YYYY-MM-DD'}}</p>
    </div>
    <div class="panel-footer text-right">
      {{#link-to 'clans.edit' clan.id class='btn btn-success btn-xs'}}Edit{{/link-to}}
      <button class="btn btn-danger btn-xs" {{action 'deleteClan' clan}}>Delete</button>
    </div>
  </div>
{{/each}}