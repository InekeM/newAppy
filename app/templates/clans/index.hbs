<h2>List</h2>

<table class="table table-striped table-hover table-condensed">
  <thead>
    <tr>
      <th>Clan tag</th>
      <th>Date clan joined</th>
      <th>Added by</th>
      <th>Record created</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
  {{#each model as |clan|}}
    <tr>
      <th>{{clan.tag}}</th>
      <td>{{moment-format clan.date 'YYYY-MM-DD'}}</td>
      <td>{{clan.adderName}}</td>
      <td>{{moment-format clan.created 'YYYY-MM-DD'}}</td>
      <td>{{#link-to 'clans.edit' clan.id class='btn btn-success btn-xs' }}Edit{{/link-to}}</td>
      <td><button {{action 'deleteClan' clan.id}} class="btn btn-primary btn-xs">Delete</button></td>
    </tr>
  {{/each}}
  </tbody>
</table>